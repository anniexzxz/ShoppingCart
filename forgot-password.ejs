<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Shoppipipi App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #EE4D2D;">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Shoppipipi</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/signup">Sign Up</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact Us</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger">
        <% error.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
  <!-- Forgot password Form -->
  <div class="container">
    <h1 class="mt-5">Forgot Password</h1>

    <form action="/forgot-password" method="POST" class="mt-4">
      <div class="form-group mb-3">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" class="form-control" required>
      </div>

      <div class="form-group mb-3">
        <label for="newPassword">New Password:</label>
        <input type="password" id="newPassword" name="newPassword" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Update Password</button>
    </form>
  </div>
</body>
</html>
